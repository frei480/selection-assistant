{
  "name": "selection-assistant",
  "version": "1.0.0",
  "description": "Standalone Selection Assistant with AI integration",
  "main": "dist/main/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:main": "tsc --watch",
    "dev:vite": "cross-env NODE_ENV=development vite",
    "dev:electron": "cross-env NODE_ENV=development node scripts/wait-for-vite.js && cross-env NODE_ENV=development electron . --trace-warnings",
    "build": "npm run build:vite && npm run build:main",
    "build:vite": "vite build",
    "build:main": "tsc",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "start": "electron ."
  },
  "dependencies": {
    "antd": "^5.11.5",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.294.0",
    "module-alias": "^2.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^5.2.3",
    "react-i18next": "^13.5.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.20.0",
    "redux": "^4.2.1",
    "redux-persist": "^6.0.0",
    "selection-hook": "^1.0.13",
    "styled-components": "^6.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/electron": "^1.6.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/styled-components": "^5.1.26",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "wait-on": "^7.0.1"
  }
}
